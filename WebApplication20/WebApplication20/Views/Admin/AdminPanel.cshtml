@model List<Mehsul>;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Russo+One&family=Send+Flowers&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/AdminPanel.css">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.slick/1.5.0/slick.min.js"></script>
    <title>AdminPanel</title>
</head>
<body>

    <section class="iki">
        <div class="uc">
            <img src="/img//gg2.jpeg" alt="">
            <h1>Fərəcova Esmira</h1>
            <p class="e1">esmirafrcova@gmail.com</p>
            <div class="umumi50">
                <a href="/Home/Index">
                    <div class="umumi51">
                        <h2>Ana Səhifə</h2>
                    </div>
                </a>
                <a href="/Admin/AdminPanel">
                    <div class="umumi51">
                        <h2>Məhsullar</h2>
                    </div>
                </a>
                <a href="/Admin/YeniCategory">
                    <div class="umumi51">
                        <h2>Kateqoriyalar</h2>
                    </div>
                </a>
                <a href="/Home/BizimleElaqe">
                    <div class="umumi51">
                        <h2>Bizimlə Əlaqə</h2>
                    </div>
                </a>
                <a href="/Admin/YeniUser">
                    <div class="umumi51">
                        <h2>User</h2>
                    </div>
                </a>
                <a href="/Home/Index">
                <div class="cixis">
                    <i class="fa-solid fa-arrow-right-from-bracket"></i><p class="e2">Çıxış</p>
					</div>
				</a>
            </div>
        </div>
        <div class="dord">
            <div class="yeni">
                <a href="/Admin/YeniMehsul">+ Əlavə et</a>
            </div>
            <div class="input">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" name="" id="" placeholder="">
            </div>
            <div class="scroll-table">

                <table>
                    <thead>
                        <tr>
                            <th>Buketin nömrəsi</th>
                            <th>Foto</th>
                            <th>Adı</th>
                            <th>Qiyməti</th>
                            <th>Status</th>
                            <th>Kateqoriya</th>
                            <th>Fəaliyyəti</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {                            
                        <tr>
                            <td>@item.MehsulunKodu</td>
                            <td><img src="/img/@item.Photos.ToList()[0].PhotoUrl" alt=""></td>
                            <td>@item.MehsulAd</td>
                                <td>@item.MehsulQiymeti.00₼</td>
                            <td>
                                <a href="/Admin/Active/@item.MehsulId">
                                        <div class="yumru" style=@(item.MehsulStatus=="Active"?"background-color:green":"background-color:#2e2e2e")>
                                        <div class="yumru1" style=@(item.MehsulStatus=="Active"?"right:10px":"left:0")></div>
										</div>
									</a>
                            </td>
                            <td>@item.MehsulCategory.CategoryName</td>
                            <td>
                                <div class="del">
										<div class="edit"><a href="/Admin/Duzelis/@item.MehsulId"><i class="fa-regular fa-pen-to-square"></i></a></div>
                                        <div class="delete"><a href="/Admin/Silmek/@item.MehsulId"><i class="fa-solid fa-minus"></i></a></div>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>


    <script src="/js/AdminPanel.js"></script>
</body>
</html>