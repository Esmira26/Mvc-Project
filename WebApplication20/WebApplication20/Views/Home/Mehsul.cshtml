                    @foreach (var item1 in item.sub)
                    {
                        <p class="@item1.SubCategoryId" catId="@item1.SubCategoryId">
                            @*<a href="/Home/Mehsul/@item1.SubCategoryId">@item1.SubCategoryName (@(item1.say))</a>*@
                            @item1.SubCategoryName (@(item1.say))
                            </p>
                    }
                </div>
            }
        </div>
        <div class="umumi">
            @foreach (var item in Model)
            {
				<div class="buket cat-@item.MehsulCategoryId" cat="">
                <a href="/Home/Melumat/@item.MehsulId">
                        <a href="/Home/LoveGet/@item.MehsulId">
                            <div class="love">
                                <i class="fa-regular fa-heart"></i>
                            </div>
                        </a>
                    <img src="/img/@item.Photos.ToList()[0].PhotoUrl" alt="" srcset="">
						<h2><a href="/Home/Melumat/@item.MehsulId">@item.MehsulAd</a></h2>  
                    <h1>@item.MehsulunKodu</h1>
                    <p>@item.MehsulQiymeti.00₼</p>
                    <form asp-action="Sebet" asp-controller="Home" asp-route-id="@item.MehsulId">
                    <button><i class="fa-solid fa-cart-shopping"></i>Səbətə</button>
                    </form>
                </a>
            </div>
            }
        </div>
    </header>
        <section class="pagination" aria-label="Page navigation example">
        <ul class="pagination my-5 mx-auto pagCat" style="width: 200px;">
            @{
                int pg = !string.IsNullOrEmpty(Context.Request.Query["page"]) ? int.Parse(Context.Request.Query["page"]) : 0;
                int catId = !string.IsNullOrEmpty(Context.Request.Query["id"]) ? int.Parse(Context.Request.Query["id"]) : 0;
            }
            <li class="page-item @(pg==0 ? "disabled" : "")" dataId="?page=@(pg-1)&&id=@(catId)">
                    @*<a class="page-link" href="?page=@(pg-1)&&id=@(catId)" aria-label="Previous">*@

                        <span aria-hidden="true">&laquo;</span>
                    @*</a>*@
                </li>


            @for (int i = 0; i < ViewBag.PageCount; i++)
            {
				<li class="page-item @(pg == i ? "active" : "")" dataId="?page=@i">
					@(i + 1)
                    @*<a class="page-link" href="?page=@i">@(i + 1)</a>*@
                    </li>
            }
            <li class="page-item @(pg==ViewBag.PageCount-1 ? "disabled" : "")" dataId="?page=@(pg+1)">
                @*<a class="page-link" href="?page=@(pg+1)" aria-label="Next">*@
                        <span aria-hidden="true">&raquo;</span>
                    @*</a>*@
                </li>
            </ul>
        </section>

